# http://wiki.bash-hackers.org/howto/getopts_tutorial

while getopts "a" opt; do
        case $opt in
        a)
                echo "-a was triggered!" # >&2
                ;;
        \?)
                echo "Invalid option: -$OPTARG" # >&2
                ;;
        esac
done


